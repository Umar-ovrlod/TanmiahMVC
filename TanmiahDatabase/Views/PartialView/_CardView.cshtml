@model System.Data.DataTable
@if (Model != null)
{
    for (int i = 0; i < Model.Rows.Count; i++)
    {
        <section class="section-recipe">
<div class="container">
    <div class="video-recipe-widget">
        <div class="video-placeholder">

            <img class="video-placeholder--img" src=@Url.Content(Convert.ToString(Model.Rows[i][1])) alt="">
        </div>
        <div class="video-recipe-desc bg-grey">
            <h3 class="video-recipe-desc--heading heading-bold-secondary">
                @Model.Rows[i][2]
            </h3>
            <p class="video-recipe-desc--text">
                @Model.Rows[i][3]
            </p>
        </div>
    </div>
</div>
</section>
    }
}
